<Defs>

<!-- Designator Dropdown Group Def for batteries-->
  <DesignatorDropdownGroupDef>
    <defName>Batteries</defName>
  </DesignatorDropdownGroupDef>

  <!-- Lead Battery -->
  <ThingDef ParentName="BuildingBase">
    <defName>BaME_Lead_Battery</defName>
    <label>lead battery</label>
    <description>Stores electricity for later use. Can store only a small ammount of power and is not very efficient, but is very sturdy.</description>
    <drawerType>MapMeshAndRealTime</drawerType>
    <thingClass>Building_Battery</thingClass>
    <designatorDropdown>Batteries</designatorDropdown>
    <graphicData>
      <texPath>Things/Building/Power/BaME_Lead_Battery</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2,3)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.40</fillPercent>
    <tickerType>Normal</tickerType>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsPower</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToBuild>1250</WorkToBuild>
      <Mass>25</Mass>
      <Flammability>0.1</Flammability>
      <Beauty>-15</Beauty>
    </statBases>
    <descriptionHyperlinks>
      <ThingDef>BaME_Copper_Battery</ThingDef>
      <ThingDef>Battery</ThingDef>
      <ThingDef>BaME_Waterproof_Battery</ThingDef>
      <ThingDef>BaME_Uranium_Battery</ThingDef>
      <ThingDef>BaME_Lithium_Battery</ThingDef>
      <ThingDef>BaME_Plasteel_Battery</ThingDef>
    </descriptionHyperlinks>
    <size>(1,2)</size>
    <building>
      <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
    </building>
    <costList>
      <BaME_Lead>60</BaME_Lead>
      <Steel>20</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="CompProperties_Battery">
        <storedEnergyMax>500</storedEnergyMax>
        <efficiency>0.3</efficiency>
        <shortCircuitInRain>true</shortCircuitInRain>
        <transmitsPower>true</transmitsPower>
      </li>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <designationCategory>Power</designationCategory>
    <uiOrder>2020</uiOrder>
    <staticSunShadowHeight>0.2</staticSunShadowHeight>
    <constructEffect>ConstructMetal</constructEffect>
    <canOverlapZones>false</canOverlapZones>
    <researchPrerequisites>
      <li>BaME_Lead_Batteries</li>
    </researchPrerequisites>
  </ThingDef>

