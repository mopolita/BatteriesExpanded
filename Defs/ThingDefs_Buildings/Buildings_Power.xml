<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Designator Dropdown Group Def for batteries-->
  <DesignatorDropdownGroupDef>
    <defName>Batteries</defName>
  </DesignatorDropdownGroupDef>

  <!-- Lead Battery -->
  <ThingDef ParentName="BuildingBase">
    <defName>VMEu_Lead_Battery</defName>
    <label>lead battery</label>
    <description>Stores electricity for later use. Can store only a small ammount of power and is not very efficient, but is very sturdy.</description>
    <drawerType>MapMeshAndRealTime</drawerType>
    <thingClass>Building_Battery</thingClass>
    <designatorDropdown>Batteries</designatorDropdown>
    <graphicData>
      <texPath>Things/Building/Power/VMEu_Lead_Battery</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2,3)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.40</fillPercent>
    <tickerType>Normal</tickerType>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsPower</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToBuild>1250</WorkToBuild>
      <Mass>25</Mass>
      <Flammability>0.1</Flammability>
      <Beauty>-15</Beauty>
    </statBases>
    <descriptionHyperlinks>
      <ThingDef>Battery</ThingDef>
      <ThingDef>VMEu_Lithium_Battery</ThingDef>
    </descriptionHyperlinks>
    <size>(1,2)</size>
    <building>
      <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
    </building>
    <costList>
      <VMEu_Lead>60</VMEu_Lead>
      <Steel>20</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="CompProperties_Battery">
        <storedEnergyMax>600</storedEnergyMax>
        <efficiency>0.3</efficiency>
        <shortCircuitInRain>true</shortCircuitInRain>
        <transmitsPower>true</transmitsPower>
      </li>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <designationCategory>Power</designationCategory>
    <uiOrder>2020</uiOrder>
    <staticSunShadowHeight>0.2</staticSunShadowHeight>
    <constructEffect>ConstructMetal</constructEffect>
    <canOverlapZones>false</canOverlapZones>
    <researchPrerequisites>
      <li>VMEu_Lead_Batteries</li>
    </researchPrerequisites>
  </ThingDef>

  <!-- Lithium Battery -->
  <ThingDef ParentName="BuildingBase">
    <defName>VMEu_Lithium_Battery</defName>
    <label>lithium battery</label>
    <description>Stores large amounts of electricity for later use. Much more efficient than steel and lead ones, but also more fragile.</description>
    <drawerType>MapMeshAndRealTime</drawerType>
    <thingClass>Building_Battery</thingClass>
    <designatorDropdown>Batteries</designatorDropdown>
    <graphicData>
      <texPath>Things/Building/Power/VMEu_Lithium_Battery</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2,3)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.40</fillPercent>
    <tickerType>Normal</tickerType>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsPower</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <WorkToBuild>1500</WorkToBuild>
      <Mass>15</Mass>
      <Flammability>2.5</Flammability>
      <Beauty>-15</Beauty>
    </statBases>   
    <descriptionHyperlinks>
      <ThingDef>Battery</ThingDef>
      <ThingDef>VMEu_Lead_Battery</ThingDef>
    </descriptionHyperlinks>
    <size>(1,2)</size>
    <building>
      <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
    </building>
    <costList>
      <VMEu_Lithium>75</VMEu_Lithium>
      <Steel>15</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="CompProperties_Battery">
        <storedEnergyMax>3000</storedEnergyMax>
        <efficiency>0.9</efficiency>
        <shortCircuitInRain>true</shortCircuitInRain>
        <transmitsPower>true</transmitsPower>
      </li>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <designationCategory>Power</designationCategory>
    <uiOrder>2020</uiOrder>
    <staticSunShadowHeight>0.2</staticSunShadowHeight>
    <constructEffect>ConstructMetal</constructEffect>
    <canOverlapZones>false</canOverlapZones>
    <researchPrerequisites>
      <li>VMEu_Lithium_Batteries</li>
    </researchPrerequisites>
  </ThingDef>
  
</Defs>
