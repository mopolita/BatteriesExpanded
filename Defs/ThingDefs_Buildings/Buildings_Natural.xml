<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Lead -->  
  <ThingDef ParentName="RockBase">
    <defName>BaME_MineableLead</defName>
    <label>lead ore</label>
    <description>Rock containing bits of lead.</description>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(57, 58, 69)</color>
      <colorTwo>(105, 106, 125)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>1200</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>BaME_Lead</mineableThing>
      <mineableYield>45</mineableYield>
      <mineableScatterCommonality>0.7</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>11~22</mineableScatterLumpSizeRange>
    </building>
  </ThingDef>

